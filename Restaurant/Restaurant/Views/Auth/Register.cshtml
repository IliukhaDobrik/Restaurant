@model UserRegistrationViewModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Auth" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="FirstName">Введите имя</label><br />
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName" />
        </div>        
        <div>
            <label asp-for="LastName">Введите фамилию</label><br />
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName" />
        </div>
        <div>
            <label asp-for="PhoneNumber">Введите номер телефона</label><br />
            <input type="text" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" />
        </div>
        <div>
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="PasswordConfirmed">Повторите пароль</label><br />
            <input asp-for="PasswordConfirmed" />
            <span asp-validation-for="PasswordConfirmed" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>