@model UserRegistrationViewModel

<h2>Регистрация</h2>

<div class="form-group row">
    <form asp-action="Register" asp-controller="Authorization" asp-anti-forgery="true" method="post">
        @Html.ValidationSummary(true)
        <div class="col-sm-10">
            @Html.LabelFor(q => q.FirstName, "Имя", new { @class = "form-label"})
            @Html.TextBoxFor(q => q.FirstName, new { @class="form-control", placeholder="Иван"})
            @Html.ValidationMessageFor(q => q.FirstName, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-sm-10">
            @Html.LabelFor(q => q.LastName, "Фамилия", new { @class = "form-label"})
            @Html.TextBoxFor(q => q.LastName, new { @class="form-control", placeholder="Иванов" })
            @Html.ValidationMessageFor(q => q.LastName, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-sm-10">
            @Html.LabelFor(q => q.PhoneNumber, "Номер телефона", new { @class = "form-label"})
            @Html.TextBoxFor(q => q.PhoneNumber, new { @class="form-control", placeholder="+375 xx xxx xx xx" })
            @Html.ValidationMessageFor(q => q.PhoneNumber, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-sm-10">
            @Html.LabelFor(q => q.Email, "Email", new { @class = "form-label"})
            @Html.TextBoxFor(q => q.Email, new { @class="form-control", placeholder="name@example.com" })
            @Html.ValidationMessageFor(q => q.Email, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-sm-10">
            @Html.LabelFor(q => q.Password, "Пароль", new { @class = "form-label"})
            @Html.TextBoxFor(q => q.Password, new { type="password", @class="form-control", placeholder="Введите пароль" })
            @Html.ValidationMessageFor(q => q.Password, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-sm-10">
            @Html.LabelFor(q => q.PasswordConfirmed, "Подтвердить пароль", new { @class = "form-label"})
            @Html.TextBoxFor(q => q.PasswordConfirmed, new { type="password", @class="form-control", placeholder="Повторите пароль" })
            @Html.ValidationMessageFor(q => q.PasswordConfirmed, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Регистрация</button>
        </div>
    </form>
</div>